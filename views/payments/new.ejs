<%- include("../partials/header")%>
<!-- create new account -->
    <div class="row mt-3">
        <div class="col">
            <h1 class="text-center">Enter new payment details from <%= fromAcc.name %> to <%= toAcc.name %></h1>
            <!-- "<%= typeof acc_parent_type !== 'undefined' ? '/' + acc_parent_type : '' %><%= typeof acc_parent_id !== 'undefined' ? '/' + acc_parent_id : '' %>/accounts/<%= account_id %>/payments" -->
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form action="<%= typeof acc_parent_type !== 'undefined' ? '/' + acc_parent_type : '' %><%= typeof acc_parent_id !== 'undefined' ? '/' + acc_parent_id : '' %>/accounts/<%= account_id %>/payments" method="post">
                <div class="form-group">
                    <input class="form-control" type="number" name="payment[amount]" id="payment-amount-new" placeholder="Payment Amount">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="payment[idTxn]" id="payment-idTxn-new" placeholder="transaction Id">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="payment[description]" id="payment-description-new" placeholder="Payment Description">
                </div>
                <div class="form-group">
                    <input type="hidden" name="payment[fromAccId]" id="payment-fromAccId-new" value="<%= fromAcc._id %>">
                </div>
                <div class="form-group">
                    <input type="hidden" name="payment[toAccId]" id="payment-toAccId-new" value="<%= toAcc._id %>">
                </div>
                <div class="form-group">
                    <input class= "btn btn-primary btn-lg form-control" type="submit" value="Submit">
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
<%- include("../partials/footer")%>