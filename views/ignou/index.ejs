<%- include("../partials/header")%>
<div class="row justify-content-center">
    <div class="col-sm-12">
        <h2 class="text-center">Upload ignou course sheet</h2>
        <p class="text-center">
            <a href="/ignou/download" class="stretched-link">Download Sample File</a>
        </p>
    </div>
    <div class="col-sm-10">
        <form action="/ignou/upload" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-5">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                        <label class="input-group-text" for="ignouProgramCode">Program Code</label>
                        </div>
                        <input class="form-control" type="text" name="programCode" id="ignouProgramCode" placeholder="Program Code" required>
                    </div>
                </div>
                <div class="form-group col-md-5">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                        <span class="input-group-text" id="ignouFileNewArea">Excell File</span>
                        </div>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="ignouFileNew" aria-describedby="ignouFileNewArea" name="xlsxfile" required >
                            <label class="custom-file-label" for="ignouFileNew">Choose file</label>
                        </div>
                    </div>
                </div>
                <div class="form-group col-md-2">
                    <div class="form-group">
                        <input class= "btn btn-primary btn-md form-control" type="submit" value="Submit">
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<%- include("../partials/footer")%>