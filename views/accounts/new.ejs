<%- include("../partials/header")%>
<!-- create new account -->
    <div class="row mt-3">
        <div class="col">
            <h1 class="text-center">Enter new account details</h1>
            <!-- "<%= typeof acc_parent_type !== 'undefined' ? '/' + acc_parent_type : '' %><%= typeof acc_parent_id !== 'undefined' ? '/' + acc_parent_id : '' %>/accounts" -->
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form action="<%= typeof acc_parent_type !== 'undefined' ? '/' + acc_parent_type : '' %><%= typeof acc_parent_id !== 'undefined' ? '/' + acc_parent_id : '' %>/accounts" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="account[name]" id="account-name-new" placeholder="Account Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="account[accnumber]" id="account-accnumber-new" placeholder="Account Number">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="account[description]" id="account-description-new" placeholder="Account Description">
                </div>
                <div class="form-group">
                    <input class= "btn btn-primary btn-lg form-control" type="submit" value="Submit">
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
<%- include("../partials/footer")%>