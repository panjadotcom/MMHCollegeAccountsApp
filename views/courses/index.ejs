<%- include("../partials/header")%>
<h1 class="text-center">Available courses</h1>

<div class="row justify-content-center">
    <% courses.forEach((course) => { %>
        <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2">
            <div class="card text-center">
                <h5 class="card-header"><%= course.name %></h5>
                <div class="card-body">
                    <!-- <h5 class="card-title"><%= course.name %></h5> -->
                    <p class="card-text"><%= course.description.substring(0, 50) %></p>
                    <!-- <p class="card-text">
                        <em>Course duration = <%= course.duration %> years</em>
                    </p>
                    <p class="card-text">
                        <em>Course fee : <%= course.fee %> INR</em>
                    </p> -->
                    <a href="/courses/<%= course._id %>" class="btn btn-primary btn-sm">View More</a>
                </div>
            </div>
        </div>
    <% }) %>
</div>
<div class="row justify-content-center">
    <div class="col-sm-4">
        <a href="/courses/new" class="btn btn-primary btn-lg btn-block mt-3">Add New Course</a>
    </div>
</div>
<%- include("../partials/footer")%>