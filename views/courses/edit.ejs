<%- include("../partials/header")%>
<!-- create new course -->
    <div class="row mt-3">
        <div class="col">
            <h1 class="text-center">Edit <%= course.name %></h1>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form action="/courses/<%= course._id%>?_method=PUT" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="course[name]" id="course-name-edit" value="<%= course.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="course[fee]" id="course-fee-edit" value="<%= course.fee%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="course[duration]" id="course-duration-edit" value="<%= course.duration%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="course[description]" id="course-description-edit" value="<%= course.description%>">
                </div>
                <div class="form-group">
                    <input class= "btn btn-primary btn-lg form-control" type="submit" value="Submit">
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
<%- include("../partials/footer")%>