<%- include("../partials/header")%>
<!-- create new course -->
    <div class="row mt-3">
        <div class="col">
            <h1 class="text-center">Enter new course details</h1>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form action="/courses" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="course[name]" id="course-name-new" placeholder="Course Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="course[fee]" id="course-fee-new" placeholder="Course fee">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="course[duration]" id="course-duration-new" placeholder="Course Duration">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="course[description]" id="course-description-new" placeholder="Course Description">
                </div>
                <div class="form-group">
                    <input class= "btn btn-primary btn-lg form-control" type="submit" value="Submit">
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
<%- include("../partials/footer")%>