<%- include("../partials/header")%>
<!-- create new student -->
    <div class="row mt-3">
        <div class="col">
            <h1 class="text-center">Enter new student details</h1>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div style="width: 75%; margin: 0.75em auto;">
            <form action="/students" method="post">
                <div class="form-group row">
                    <label for="student-studentid-new" class="col-sm-2 col-form-label">Student id</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="text" name="student[studentid]" id="student-studentid-new">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="student-name-new" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="text" name="student[name]" id="student-name-new">
                    </div>
                </div>
                <fieldset class="form-group">
                    <div class="row">
                      <legend class="col-form-label col-sm-2 pt-0">Gender</legend>
                      <div class="col-sm-10">
                        <div class="form-check form-check-inline">
                          <input class="form-check-input" type="radio" name="student[gender]" id="gendermale" value="male">
                          <label class="form-check-label" for="gendermale">
                            Male
                          </label>
                        </div>
                        <div class="form-check form-check-inline">
                          <input class="form-check-input" type="radio" name="student[gender]" id="genderfemale" value="female">
                          <label class="form-check-label" for="genderfemale">
                            Female
                          </label>
                        </div>
                        <div class="form-check form-check-inline">
                          <input class="form-check-input" type="radio" name="student[gender]" id="genderother" value="other">
                          <label class="form-check-label" for="genderother">
                            Other
                          </label>
                        </div>
                      </div>
                    </div>
                </fieldset>
                <div class="form-group row">
                    <label for="student-dob-new" class="col-sm-2 col-form-label">Date of Birth</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="date" name="student[dob]" id="dob">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="student-father-new" class="col-sm-2 col-form-label">father name</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="text" name="student[father]" id="student-father-new">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="student-mother-new" class="col-sm-2 col-form-label">mother name</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="text" name="student[mother]" id="student-mother-new">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="student-catagory-new" class="col-sm-2 col-form-label">catagory</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="text" name="student[catagory]" id="student-catagory-new">
                    </div>
                </div>
                <div class="form-group">
                    <input class= "btn btn-primary btn-lg form-control" type="submit" value="Submit">
                </div>
            </form>
        </div>
        </div>
    </div>
<%- include("../partials/footer")%>